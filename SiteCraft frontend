<body>
  <h1>SiteCraft AI</h1>
  <p>Generate and preview your custom AI website instantly.</p>

  <div class="controls">
    <textarea id="prompt" placeholder="Enter your website prompt here..."></textarea>

    <div class="radio-group">
      <label><input type="radio" name="genType" value="template" checked /> Template</label>
      <label><input type="radio" name="genType" value="pure" /> Full AI</label>
    </div>

    <button onclick="generate()">Generate Website</button>
  </div>

  <iframe id="preview"></iframe>

  <script>
    async function generate() {
      const prompt = document.getElementById("prompt").value.trim();
      const type = document.querySelector('input[name="genType"]:checked').value;

      if (!prompt) return alert("Please enter a prompt first.");

      const endpoint = type === "pure"
        ? "https://sitecraft-backend.onrender.com/generate-pure"
        : "https://sitecraft-backend.onrender.com/generate";

      const res = await fetch(endpoint, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ prompt })
      });

      const data = await res.json();
      document.getElementById("preview").srcdoc = data.html;
    }
  </script>
